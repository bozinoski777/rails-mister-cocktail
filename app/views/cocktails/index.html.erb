<%= render 'shared/banner'%>
<div class="container text-center">
<h1 class="m-4">Cocktails</h1>
<%= render 'shared/search_bar'%>
</div>
<div class="container"><h3>
 <% if params['alcoholic'] == 'false' %>
 <h3><%="Non Alcoholic-Cocktails and other drinks " %></h3>
 <% else %>
 <h3><%=" Something else "%></h3>
 <% end %>
</h3>
</div>
<div class="container"><i class="thumb-list-toggle fas fa-th-list"></i><i class="thumb-list-toggle fas fa-th-large"></i></div>


<% if params[:display].present? && params[:display] == "list"  %>
<form action=<% "#{params}/"  %> accept-charset="UTF-8" method="post">
  <input type="submit" value="Grid" class="btn btn-primary" data-disable-with="Grid">
</form>

<div class="container">
    <div data-controller="infinite-scroll">
      <div data-target="infinite-scroll.entries">
      <%= render "render_cocktails_list" %>
      </div>

      <div data-target="infinite-scroll.pagination">
        <%== pagy_nav(@pagy) %>
      </div>
  </div>
</div>
<% else %>
<%= params %>
<form action="/ <% params %>" accept-charset="UTF-8" method="get">
  <input type="submit" name="display" value="list" class="btn btn-primary" data-disable-with="List">
</form>\
<a href=<%="/cocktails?query=#{params[:query]}&alcoholic=#{params[:alcoholic]}&commit=#{params[:commit]}&display=list"%> >List!</a>
<div class="container">
    <div data-controller="infinite-scroll">
      <div data-target="infinite-scroll.entries">
      <%= render "render_cocktails" %>
      </div>

      <div data-target="infinite-scroll.pagination">
        <%== pagy_nav(@pagy) %>
      </div>
  </div>
</div>

<% end %>



<div id="card-link" class="col-sm-6 col-lg-3">
  <a style="text-decoration: none;" href="<%="/cocktails/#{cocktail_within.id}" %>">
    <div class="wrapper d-flex">
      <div class="card" style="margin-bottom: 35px;"><img src="<%= cl_image_path(cocktail_within.photo.key) if cocktail_within.photo.attached? %>"/>
        <div class="info">
          <h1 class="card_name"><%= cocktail_within.name %></h1>
            <div class="d-flex justify-content-between">
              <p>
                <% if cocktail_within.ratings.present? %>
                  <% cocktail_within.ratings.average("rating").to_i.times do %>
                    <i class="fas fa-star" style="color: #e9c46a"></i>
                  <% end %>
                  <% (5-cocktail_within.ratings.average("rating").to_i).times do %>
                    <i class="fas fa-star" style="color: lightgray"></i>
                  <% end %>
                <% else %>
                  <% (5).times do %>
                    <i class="fas fa-star" style="color: lightgray"></i>
                  <% end %>
                <% end %>
              </p>
            </div>
          <ul class="card_ingredient">
            <% cocktail_within.ingredients.each do |ing| %>
              <li><%= ing.name%></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </a>
</div>

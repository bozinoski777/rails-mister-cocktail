<table id="tablePreview" class="table" style="margin: 0;">
<!--Table head-->
    <tr>
      <th class="d-flex justify-content-between">
      <!-- Button trigger modal -->
      <div class="title_and_edit_button d-flex">
        <h2 style="font-size: 37px; margin: 0px;">
          Instructions
        </h2>
        <button type="button" style=" border: none; background-color: #f4f4f400;" class="edit-img d-flex" data-toggle="modal" data-target="#exampleModalInstructions">
          <div id="edit-button-border">
          <%= image_tag "https://res.cloudinary.com/dj9iphc8u/image/upload/v1603653847/Mr%20Cocktail%20icons/edit_rfn5xg.svg", class: "edit-button-img", alt: "alttext" %>
          <p>
            Edit
          </p>
          </div>
        </button>
      </div>
  <thead>
    </th>

      <!-- Modal -->
      <div class="modal fade" id="exampleModalInstructions" tabindex="-1" role="dialog" aria-labelledby="exampleModalInstructionsLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalInstructionsLabel">Edit Information</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body ">
              <%= simple_form_for(@cocktail) do |f| %>
                <%= f.input :description, :input_html => { :style => "height: 200px;"}, as: :text %>
                <%= f.input :glass %>
                <%= f.input :alcoholic, class: "custom-control-input"  %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= f.submit 'Update Info', class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </tr>
  </thead>
  <!--Table head-->
  <!--Table body-->
  <tbody>

    <tr>

    <td> <%= cocktail_within.description %> </td>

    </tr>


  </tbody>
  <!--Table body-->
</table>
<table id="tablePreview" class="table">
<!--Table head-->
  <thead>
    <tr>

      <th>Glass Type</th>
      <th>Contains Alcohol</th>
    </tr>
  </thead>
  <!--Table head-->
  <!--Table body-->
  <tbody>

    <tr>

    <td> <%= cocktail_within.glass %> </td>
    <% if @cocktail.alcoholic == true%>
    <td><%= "Yes" %></td>
    <% else %>
    <td><%= "No" %></td>
    <% end %>
    </tr>


  </tbody>
  <!--Table body-->
</table>

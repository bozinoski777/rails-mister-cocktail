<div class="modal fade" id="edit_cocktail_information" tabindex="-1" role="dialog" aria-labelledby="edit_cocktail_informationLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit_cocktail_informationLabel">Edit Information</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body ">
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :description, :input_html => { :style => "height: 200px;"}, as: :text %>
          <%= f.input :glass %>
          <%= f.input :alcoholic, class: "custom-control-input"  %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Update Info', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div  class="search_bar d-flex justify-content-center">
  <div class="p-0">
<%= form_tag cocktails_path, id: 'search_from', method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search by Ingredient",
    id: "input_text"
  %>
  </div>
  <div class="custom-control custom-switch">
    <% if params[:alcoholic].present? && params[:alcoholic] == "false" %>
    <input type="checkbox" class="custom-control-input" name="alcoholic" id="alcoholic" value="false" checked>
    <% else %>
    <input type="checkbox" class="custom-control-input" name="alcoholic" id="alcoholic" value="false">
    <% end %>
    <label class="custom-control-label" for="alcoholic">Virgin</label>
  </div>

<button type="submit" name="commit" value="Search" class="btn btn-primary"><i class="fas fa-search"></i></button>
  <!-- <%#= submit_tag "Search", class: "btn btn-primary" %> -->
<% end %>
</div>

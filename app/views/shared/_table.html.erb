
<table id="tablePreview" class="table">
<!--Table head-->
  <thead>
    <tr>
      <th>#</th>
      <th>Ingredient</th>
      <th>Dose</th>
      <th>Delete</th>
    </tr>
  </thead>
  <!--Table head-->
  <!--Table body-->
  <tbody>
    <% n = 1 %>
    <% @cocktail.doses.each do |dose| %>
    <tr id="ingredient">
    <th scope="row"> <%= n %> </th>
    <td> <%= dose.ingredient.name %> </td>
    <td> <%= dose.description %> </td>
    <td> <%= link_to "Delete",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></td>
    <%  n += 1  %>
    <% end %>
    </tr>
    <tr data-target="#exampleModalIngredient" data-toggle="modal" id="add_ingredient">
      <th scope="row"> <i class="far fa-plus-square"></i> </th>
      <td>Add an ingredient</td>
      <td></td>
      <td></td>
    </tr>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalIngredient" tabindex="-1" role="dialog" aria-labelledby="exampleModalIngredientLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalIngredientLabel">Add an Ingredient</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
              <%= f.association :ingredient %>
              <%= f.input :description, label: "Dosage" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <%= f.submit "Add Ingredient", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </tbody>
  <!--Table body-->
</table>

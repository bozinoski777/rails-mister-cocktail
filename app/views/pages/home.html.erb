<%= render 'shared/banner'%>
<div class="container text-center">
<h1 class="m-4">Cocktails</h1>
<%= form_tag cocktails_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a cocktail"
  %>
  <div class="custom-control custom-switch">
    <input type="checkbox" class="custom-control-input" name="alcoholic" id="alcoholic" value="false">
    <label class="custom-control-label" for="alcoholic">Virgin</label>
  </div>
  <!-- <input type="radio" name="alcoholic" id="alcoholic_true" value="true">
  <label for="alcoholic">Alcoholic</label>
  <input type="radio" name="alcoholic" id="alcoholic_true" value="false">
  <label for="alcoholic">Non-Alcoholic</label> -->


  <%#= radio_button_tag(:alcoholic, true) %>
  <%#= label_tag(:age_child, "Alcoholic") %>
  <%#= radio_button_tag(:alcoholic, false) %>
  <%#= label_tag(:age_child, "Non-Alcoholic") %>
    <%#= label_tag("Alcoholic": true, "Non-Alcoholic": false), label: false, as: :radio_buttons %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

  <div class="">
    <%= simple_form_for :search_alcoholic, url: cocktails_path, method: "GET" do |f| %>
      <%#= f.input :alcoholic, collection: {"Alcoholic": true, "Non-Alcoholic": false}, label: false, as: :radio_buttons %>
      <%= f.submit "Filter", class: "btn btn-filter w-100" %>
    <% end %>
  </div>

</div>
<h2>Top 10 Cocktails</h2>
<div class="container"><i class="thumb-list-toggle fas fa-th-list"></i><i class="thumb-list-toggle fas fa-th-large"></i></div>
<div class="container"><%= link_to 'Non-Alcoholic', cocktails_path({"alcoholic"=>"false"}) %><i style="font-size: 20px;" class="fas fa-wine-glass-alt"></i><p>Alcoholic?</p></div>
<div class="container"><%= link_to 'Non-Alcoholic', cocktails_path(query: 'true') %><i style="font-size: 20px;" class="fas fa-wine-glass-alt"></i><p>Alcoholic?</p></div>
<div class="container">
  <div class="row justify-content-around">
    <% @cocktails.each do |cocktail| %>
      <%= render 'shared/card', cocktail_within: cocktail%>
    <% end %>
  </div>
</div>

<% if params[:top] != "cocktails"  %>
<%= render 'shared/banner'%>
<% end %>
<div class="container">
  <div class="mt-3 container text-center">
    <h1 style="font-size: 70px;">
      Top Cocktails
    </h1>
  </div>
  <section id="cocktails_section">
    <% if params[:display].present? && params[:display] == "list"  %>
      <div class="container whole_encilada">
        <form id="toggle-button" class="whole_encilada text-right mb-3" action="/" accept-charset="UTF-8" method="get">
          <input type="hidden" name="top" value="cocktails">
          <button class="thumb-toggle text-right" type="submit" value="Grid">
            <%= image_tag "https://res.cloudinary.com/dj9iphc8u/image/upload/v1603790759/Mr%20Cocktail%20icons/pieces_cb03dx.svg", class: "thumb-list-toggle", alt: "alttext" %>
          </button>
          <p id="toggle-name">
            Show Grid
          </p>
        </form>
      </div>
      <div data-controller="infinite-scroll">
        <div class="text-center" data-target="infinite-scroll.entries">
          <%= render "./cocktails/render_cocktails_list" %>
        </div>
        <div class=" d-flex justify-content-center" data-target="infinite-scroll.pagination">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    <% else %>
      <div class="container whole_encilada">
        <form class="text-right mb-3" action="/" accept-charset="UTF-8" method="get">
          <input type="hidden" name="top" value="cocktails">
          <button class="thumb-toggle text-right" type="submit" name="display" value="list" name="top" value="cocktails">
            <%= image_tag "https://res.cloudinary.com/dj9iphc8u/image/upload/v1603790764/Mr%20Cocktail%20icons/grid_afd6y9.svg", style: "transform: rotate(90deg)", class: "thumb-list-toggle", alt: "alttext" %>
          </button>
          <p id="toggle-name">
            Show List
          </p>
        </form>
      </div>
      <div class="container">
        <div data-controller="infinite-scroll">
          <div data-target="infinite-scroll.entries">
            <%= render "./cocktails/render_cocktails" %>
          </div>
          <div class=" d-flex justify-content-center" data-target="infinite-scroll.pagination">
            <%== pagy_bootstrap_nav(@pagy) %>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</div>
